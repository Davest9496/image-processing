{
  "version": 2,
  "builds": [
    {
      "src": "dist/src/index.js",
      "use": "@vercel/node"
    },
    {
      "src": "src/public/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/js/(.*)",
      "dest": "/src/public/js/$1"
    },
    {
      "src": "/css/(.*)",
      "dest": "/src/public/css/$1"
    },
    {
      "src": "/api/(.*)",
      "dest": "dist/src/index.js"
    },
    {
      "src": "/(.*)",
      "dest": "dist/src/index.js"
    }
  ]
}
