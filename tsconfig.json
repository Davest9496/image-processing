{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES6", "DOM", "ES2020"], 
    "module": "CommonJS",
    "rootDir": "./",
    "moduleResolution": "node",
    "typeRoots": ["./node_modules/@types"],
    "types": ["jasmine", "node"],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "outDir": "./dist",
    "skipLibCheck": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "declaration": true 
  },
  "include": [
    "src/**/*",
    "spec/**/*",
    "vercel.json" 
  ],
  "exclude": [
    "node_modules",
    "dist",
    "public",
    "**/*.spec.ts" 
  ]
}
